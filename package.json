{
  "name": "multi-package-start",
  "version": "0.0.0",
  "description": "starter template for multipackage monorepo",
  "repository": "https://github.com/accezar/multi-package-start.git",
  "author": "Anna Carolina <carol.carizzo@gmail.com>",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/*",
    "examples/*"
  ],
  "scripts": {
    "clean": "rm -rf node_modules && lerna run clean",
    "clean-dist": "lerna run clean-dist",
    "compile": "lerna run compile",
    "prepare": "is-ci || husky install",
    "release": "changeset publish",
    "test": "lerna run test",
    "commit": "lint-staged && cz --no-verify",
    "storybook": "start-storybook -p 6006",
    "storybook:build": "build-storybook -o ./public",
    "lint": "eslint 'packages/**/src/*.{ts,tsx}'",
    "type:check": "lerna run type:check"
  },
  "devDependencies": {
    "@babel/core": "^7.15.0",
    "@changesets/cli": "^2.16.0",
    "@commitlint/cli": "^13.1.0",
    "@commitlint/config-conventional": "^13.1.0",
    "@stitches/react": "^0.2.5",
    "@storybook/addon-a11y": "^6.3.7",
    "@storybook/addon-actions": "^6.3.7",
    "@storybook/addon-controls": "^6.3.7",
    "@storybook/addon-docs": "^6.3.7",
    "@storybook/addon-essentials": "^6.3.7",
    "@storybook/addon-jest": "^6.3.7",
    "@storybook/addon-links": "^6.3.7",
    "@storybook/addon-viewport": "^6.3.7",
    "@storybook/addons": "^6.3.7",
    "@storybook/builder-webpack5": "^6.3.7",
    "@storybook/react": "^6.3.7",
    "@storybook/theming": "^6.3.7",
    "@testing-library/dom": "^8.1.0",
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^12.0.0",
    "@testing-library/user-event": "^13.2.1",
    "@types/jest": "^27.0.1",
    "@types/react": "^17.0.18",
    "@types/react-dom": "^17.0.9",
    "@typescript-eslint/eslint-plugin": "^4.29.2",
    "@typescript-eslint/parser": "^4.29.2",
    "babel-loader": "^8.2.2",
    "commitizen": "^4.2.4",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^7.32.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-import-resolver-typescript": "^2.4.0",
    "eslint-plugin-import": "^2.24.0",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-react": "^7.24.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "gatsby-cli": "^3.12.0",
    "husky": "^7.0.0",
    "is-ci": "^3.0.0",
    "jest": "^27.0.6",
    "lerna": "^4.0.0",
    "lint-staged": "^11.1.2",
    "plop": "^2.7.4",
    "prettier": "^2.3.2",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "rollup": "^2.56.2",
    "rollup-plugin-analyzer": "^4.0.0",
    "rollup-plugin-progress": "^1.1.2",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-typescript2": "^0.30.0",
    "rollup-plugin-visualizer": "^5.5.2",
    "storybook-addon-performance": "^0.16.0",
    "ts-jest": "^27.0.5",
    "ts-node": "^10.2.0",
    "tsconfig-paths": "~3.9.0",
    "typescript": "^4.3.5"
  },
  "lint-staged": {
    "packages/**/src/*": [
      "yarn lint"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
