{
  "extends": "../../tsconfig.paths.json",

  "include": ["src/**/*"],

  "exclude": ["node_modules", "dist", "src/*.test.tsx"],

  "compilerOptions": {
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "module": "esnext",
    "target": "es5",
    "outDir": "./dist",
    "rootDir": "./src",
    "noImplicitAny": false
  }
}
